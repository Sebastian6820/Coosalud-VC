SELECT SUBSTRING(A.CORTE_GRAFICO ,1,4) Ano,
SUBSTRING(A.CORTE_GRAFICO ,6,2) Mes,
A.DIVIPOLA,
B.DEPARTAMENTONOMBRE ,
B.MUNICIPIONOMBRE,
b.SUCURSAL,
B.REGIONAL,
 SUM(IFF(COD_EPS IN ('ESSC24', 'EPS042') , TOTAL_AFILIADOS,0)) Contributivo,
    SUM(IFF(COD_EPS IN ('ESS024','EPSS42') , TOTAL_AFILIADOS,0)) Subsidiado,
  SUM(A.TOTAL_AFILIADOS) AS Total
FROM DW_CICLO_INGRESO_UPC.VAULT_FUENTES.V_AFILIADOS_MENSUAL AS A
LEFT JOIN DWH_PRODUCCION.VAULT_FUENTES.M_MUNICIPIOS AS B ON A.DIVIPOLA = B.DIVIPOLA
WHERE a.CORTE_GRAFICO >= '2018-12-31' 
GROUP BY 1,2,3,4,5,6,7;
