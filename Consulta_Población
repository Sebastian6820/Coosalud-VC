SELECT 
    DIVIPOLA,
    SUM(CASE WHEN EDAD >= '18' AND COD_EPS IN ('EPS042','ESSC24') THEN TOTAL_AFILIADOS          ELSE 0 END) AS ADULTO_CONTRIBUTIVO,
    SUM(CASE WHEN EDAD >= '18' AND COD_EPS IN ('EPSS42','ESS024') THEN TOTAL_AFILIADOS          ELSE 0 END) AS ADULTO_SUBSIDIADO,
        SUM(CASE WHEN EDAD < '18' AND COD_EPS IN ('EPS042','ESSC24') THEN TOTAL_AFILIADOS          ELSE 0 END) AS MENOR_DE_18_CONTRIBUTIVO,
    SUM(CASE WHEN EDAD < '18' AND COD_EPS IN ('EPSS42','ESS024') THEN TOTAL_AFILIADOS          ELSE 0 END) AS MENOR_DE_18_SUBSIDIADO,
    SUM(TOTAL_AFILIADOS)
FROM 
    DWH_PRODUCCION.ASEGURAMIENTO.V_AFILIADOS_MENSUAL
WHERE 
    YEAR(CORTE_GRAFICO) = '2024' 
    AND MONTH(CORTE_GRAFICO) = '1' 
    AND DIVIPOLA IN ()
GROUP BY DIVIPOLA;
