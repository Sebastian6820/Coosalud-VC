SELECT SUBSTRING(A.CORTE_GRAFICO ,1,4) Ano,
SUBSTRING(A.CORTE_GRAFICO ,6,2) Mes,
A.DIVIPOLA ,
B.DEPARTAMENTONOMBRE ,
B.MUNICIPIONOMBRE,
 SUM(CASE WHEN COD_EPS IN ('ESSC24', 'EPS042') AND A.EDAD >= '18' THEN TOTAL_AFILIADOS ELSE 0 END) AS Contributivo_Mayores_de_edad,
 SUM(CASE WHEN COD_EPS IN ('ESSC24', 'EPS042') AND A.EDAD < '18' THEN TOTAL_AFILIADOS ELSE 0 END) AS Contributivo_Menores_de_edad,
  SUM(CASE WHEN COD_EPS IN ('ESS024','EPSS42') AND A.EDAD >= '18' THEN TOTAL_AFILIADOS ELSE 0 END) AS Subsidiado_Mayores_de_edad,
  SUM(CASE WHEN COD_EPS IN ('ESS024','EPSS42') AND A.EDAD < '18' THEN TOTAL_AFILIADOS ELSE 0 END) AS Subsidiado_Menores_de_edad,
  SUM(A.TOTAL_AFILIADOS) AS Total
FROM DW_CICLO_INGRESO_UPC.VAULT_FUENTES.V_AFILIADOS_MENSUAL AS A
LEFT JOIN DWH_PRODUCCION.VAULT_FUENTES.M_MUNICIPIOS AS B ON A.DIVIPOLA = B.DIVIPOLA
WHERE a.CORTE_GRAFICO >= '2020-12-31' 
GROUP BY 1,2,3,4,5
